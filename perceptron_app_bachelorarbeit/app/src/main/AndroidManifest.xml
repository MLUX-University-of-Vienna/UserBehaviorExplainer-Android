<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.perceptron_app_bachelorarbeit">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/uni_wien_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Perceptron_app_bachelorarbeit">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.NodeActivity"
            android:exported="true"
            />

        <activity android:name=".activities.DescriptionActivity"
            android:exported="true"
        />

        <activity
            android:name=".activities.TotalNode"
            android:exported="true"
            />

    </application>

</manifest>